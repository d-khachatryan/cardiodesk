@(Html.Kendo().Grid<CardioSence.Models.BRUStatus>()
              .Name("BRUStatus")
              .Columns(columns =>
              {
                  columns.Bound(product => product.BRUStatusId).Width(70);
                  columns.Bound(product => product.BRUStatusName);
                  columns.Command(commands =>
                  {
                      commands.Destroy().Text("Delete").HtmlAttributes(new { @class = "Cat_Delete_Icon" });
                  }).Title("Commands").Width(110);
              })
              .ToolBar(toolbar =>
              {
                  toolbar.Create().Text("New");
                  toolbar.Save().SaveText("Save").CancelText("Cancel");
              })
              .Editable(editable => editable.Mode(GridEditMode.InCell))
              .DataSource(dataSource =>
                  dataSource.Ajax()
                    .Batch(true)
                    .Model(model =>
                    {
                        model.Id(product => product.BRUStatusId);
                        model.Field(product => product.BRUStatusId).Editable(false);
                    })
                    .Create(create => create.Action("BRUStatusCreate", "Catalog"))
                    .Read(read => read.Action("BRUStatusRead", "Catalog"))
                    .Update(update => update.Action("BRUStatusUpdate", "Catalog"))
                    .Destroy(destroy => destroy.Action("BRUStatusDestroy", "Catalog"))
              )
              .Pageable()
              .HtmlAttributes(new { @class = "catalog-grid" })
              .Scrollable()
)

