            </div>
            <div class="col-sm-12 col-md-6 border-box margin-5-0">
                <div class="form-group">
                    @Html.LabelFor(model => model.QT, new { @class = "control-label" })
                    @Html.Kendo().IntegerTextBoxFor(model => model.QT)
